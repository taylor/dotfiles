#caption always
#caption string "%{Yk}%H %{Kk}%-w%{kR}%n %t%{-}%+w"
#
#
#hardstatus lastline "%-Lw%{= BW}%50>%n%f* %t%{-}%+Lw%<"
#hardstatus alwayslastline "%{wk}%-w%{Gk}[%n %t]%{wk}%+w%=%{Ck}%D %d/%m/%Y - %c:%s"

startup_message off

vbell off
multiuser on
#shell -$SHELL


